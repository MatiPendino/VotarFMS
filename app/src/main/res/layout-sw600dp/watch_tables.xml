<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ladrillos"
    tools:context=".tables.WatchTables">

    <TextView
        android:id="@+id/txt_chooseLeague"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="Escoge la Liga"
        android:textSize="30sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/iv_arg"
        android:layout_width="180dp"
        android:layout_height="190dp"
        android:layout_below="@+id/txt_chooseLeague"
        android:layout_alignParentStart="true"
        android:layout_marginStart="85dp"
        android:layout_marginTop="45dp"
        android:onClick="seeArgentina"
        app:srcCompat="@drawable/fms_argentina" />

    <ImageView
        android:id="@+id/iv_chile"
        android:layout_width="180dp"
        android:layout_height="190dp"
        android:layout_below="@+id/txt_chooseLeague"
        android:layout_marginStart="70dp"
        android:layout_marginTop="45dp"
        android:layout_toEndOf="@+id/iv_arg"
        android:onClick="seeChile"
        app:srcCompat="@drawable/fms_chile" />

    <ImageView
        android:id="@+id/iv_esp"
        android:layout_width="180dp"
        android:layout_height="190dp"
        android:layout_below="@+id/iv_arg"
        android:layout_alignParentStart="true"
        android:layout_marginStart="85dp"
        android:layout_marginTop="45dp"
        android:onClick="seeSpain"
        app:srcCompat="@drawable/fms_espania" />

    <ImageView
        android:id="@+id/iv_mex"
        android:layout_width="180dp"
        android:layout_height="190dp"
        android:layout_below="@+id/iv_chile"
        android:layout_marginStart="70dp"
        android:layout_marginTop="45dp"
        android:layout_toEndOf="@+id/iv_esp"
        android:onClick="seeMexico"
        app:srcCompat="@drawable/fms_mexico" />

    <ImageView
        android:id="@+id/iv_peru"
        android:layout_width="180dp"
        android:layout_height="190dp"
        android:layout_below="@+id/iv_mex"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:layout_marginBottom="15dp"
        android:onClick="seePeru"
        app:srcCompat="@drawable/fms_peru" />
</RelativeLayout>